{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SqlServer": "Server=.;Database=FastVocab;TrustServerCertificate=true;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Cloudinary": {
    "CloudName": "your-cloudname",
    "ApiKey": "your-key",
    "ApiSecret": "your-secret"
  },
  "EmailSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSsl": true,
    "UserName": "your_email@gmail.com",
    "Password": "your_app_password",
    "From": "MyApp <your_email@gmail.com>"
  }
}
